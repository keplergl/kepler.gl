{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "build/dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./src"
  },
  "paths": {
    "actions": "src/actions",
    "actions/*": "src/actions/*",
    "reducers": "src/reducers",
    "reducers/*": "src/reducers/*"
  },
  "include": [
    "src/actions",
    "src/cloud-providers",
    "src/processors",
    "src/reducers",
    "src/schemas",
    "src/utils",
    "src/components/common/file-uploader",
    "src/components/common/progress-bar.js",
    "src/components/modals/load-data-modal.js",
    "src/components/modal-container.js",
    "src/components/kepler.gl"

    // TODO: add types
    // "src/constants",
    // "src/deckgl-layers",
    // "src/layers"
    // "src/localization",
    // "src/middleware",
    // "src/tasks"
  ]
}
